{{!
    @template theme_stream/login

    Login page template

    Example context (json):
    {
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Login page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headers keep HTML validators happy</h1>"
        },
        "loginimg": "loginimage.jpg"
    }
}}
{{> theme_boost/head }}

<body {{{ bodyattributes }}}>
{{> core/local/toast/wrapper}}

<div id="page-wrapper">

    {{{ output.standard_top_of_body_html }}}

    <div id ="page" class="container-fluid ">
        <div id="page-content" class="row">
          <div class="col-sm-5 text-black">
            <div class="d-flex align-items-center login-container">
                {{{ output.main_content }}}
            </div>
          </div>
          <div class="col-sm-7 px-0 d-none d-sm-block login-image">
            <img src="{{{loginimg}}}"
              alt="Login image" class="w-100 h-100">
          </div>
        </div>
    </div>
    <footer class="login-footer text-center">
        <div>{{#str}}poweredbymoodle, core{{/str}}
            {{#str}}usingstreamtheme, theme_stream{{/str}}
            {{{ output.standard_footer_html }}}
            {{{ output.standard_end_of_body_html }}}
        </div>

     </footer>
</div>

</body>
</html>
{{#js}}
M.util.js_pending('theme_boost/loader');
require(['theme_boost/loader'], function() {
  M.util.js_complete('theme_boost/loader');
});
{{/js}}
